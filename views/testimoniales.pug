extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center #{pagina}
        
        //Importamos los testimoniales
        include ./layout/bloqueTestimonios
        
        .row 
            h2.d-block.w-100.text-center Agrega un Testimonial
            
            .col-md-12
                if(errores)
                    each error in errores 
                        p.text-center.mt-2.alert.alert-danger #{error.mensaje}
    

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group     
                            label(for="nombre") Nombre :
                            input#nombre(type="text", placeholder="Tu nombre" name="nombre" class="form-control" value=nombre)
                        .form-group     
                            label(for="correo") Correo Electronico :  
                            input#correo(type="email", placeholder="Tu correo" name="correo" class="form-control" value=correo)
                        .form-group     
                            label(for="mensaje") Mensaje :  
                            textarea#mensaje(name="mensaje", cols="30", rows="10" class="form-control")=mensaje 
                        
                        input.btn.btn-success.btn-block(type="submit")
            
            